    <script language="JavaScript">
      function showform(dowhat) {
        /*
        * four DIVS: browse, insert, update, delete
        * this function sets one visible the others not
        */
        if (dowhat == 'insertTicket'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertTicket').style.display = 'block';
          document.getElementById('insertShow').style.display = 'none';
          document.getElementById('insertTicketType').style.display = 'none';
        }
        else if (dowhat == 'insertShow'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertTicket').style.display = 'none';
        }
        else if (dowhat == 'insertTicketType'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertTicket').style.display = 'none';
        }
        else if (dowhat == 'all'){
          document.getElementById('browse').style.display = 'block';
          document.getElementById('insertTicket').style.display = 'block';
        }
        else { //by default display browse
          document.getElementById('browse').style.display = 'browse';
          document.getElementById('insertTicket').style.display = 'none';
        }
      }
      function newTicket() { showform('insertTicket'); }
      function browseTickets() { showform ('browse'); }
      function showAll() { showform ('all'); }
  </script>
