 <div id="browse">
   {{!-- Create a table --}}
    <table id="genre-table" border="1" cellpadding="5" style="margin-left: auto; margin-right: auto;" class="table">
        <caption style="text-align:center"><strong>Genres</strong></caption>
        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                
                {{#each data.[0]}}
                <th class="pk">
                    {{@key}}
                </th>
                {{/each}}
                <th><a href="#" onClick="newGenre()">Add +</a></th>
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the genre id and the genre name --}}
            {{#each data}}
            <tr>
                <td>{{this.genre_id}}</td>
                <td>{{this.genre}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
  </div>
