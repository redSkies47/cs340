<head>
    <script language="JavaScript">
      function showform(dowhat) {
        /*
        * four DIVS: browse, insert, update, delete
        * this function sets one visible the others not
        */
        if (dowhat == 'insertMovie'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertMovie').style.display = 'block';
          document.getElementById('deleteMovie').style.display = 'none';
          document.getElementById('insertMoviesHasGenre').style.display = 'none';
        }
        else if (dowhat == 'deleteMovie'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertMovie').style.display = 'block';
          document.getElementById('deleteMovie').style.display = 'none';
          document.getElementById('insertMoviesHasGenre').style.display = 'none';
        }
        else if (dowhat == 'insertMoviesHasGenre'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertMovie').style.display = 'none';
          document.getElementById('deleteMovie').style.display = 'none';
          document.getElementById('insertMoviesHasGenre').style.display = 'block';
        }
        else if (dowhat == 'all'){
          document.getElementById('browse').style.display = 'block';
          document.getElementById('insertMovie').style.display = 'block';
          document.getElementById('deleteMovie').style.display = 'block';
          document.getElementById('insertMoviesHasGenre').style.display = 'block';
        }
        else { //by default display browse
          document.getElementById('browse').style.display = 'block';
          document.getElementById('insertMovie').style.display = 'none';
          document.getElementById('deleteMovie').style.display = 'none';
          document.getElementById('insertMoviesHasGenre').style.display = 'none';
        }
      }
      function insertMovie() { showform('insertMovie'); }
      function deleteMovie(pid) { showform('deleteMovie'); }
      function browseMovies() { showform ('browse'); }
      function insertMoviesHasGenre() { showform ('insertMoviesHasGenre'); }
      function showAll() { showform ('all'); }
  </script>
