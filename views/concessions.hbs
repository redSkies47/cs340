<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<head>
    <script language="JavaScript">

      function showform(dowhat) {
        /*
        * four DIVS: browse, insert, update, delete
        * this function sets one visible the others not
        */
        if (dowhat == 'browse'){
          document.getElementById('browse').style.display = 'block';
          document.getElementById('insertConcession').style.display = 'none';
          document.getElementById('updateConcession').style.display = 'none';
          document.getElementById('deleteConcession').style.display = 'none';
          document.getElementById('insertConcessionsHasItems').style.display = 'none';
        }
        else if (dowhat == 'insertConcession'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertConcession').style.display = 'block';
          document.getElementById('updateConcession').style.display = 'none';
          document.getElementById('deleteConcession').style.display = 'none';
          document.getElementById('insertConcessionsHasItems').style.display = 'none';
        }
        else if (dowhat == 'updateConcession'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertConcession').style.display = 'none';
          document.getElementById('updateConcession').style.display = 'block';
          document.getElementById('deleteConcession').style.display = 'none';
          document.getElementById('insertConcessionsHasItems').style.display = 'none';
        }
        else if (dowhat == 'deleteConcession'){
          document.getElementById('browse').style.display = 'block';
          document.getElementById('insertConcession').style.display = 'none';
          document.getElementById('updateConcession').style.display = 'none';
          document.getElementById('deleteConcession').style.display = 'block';
          document.getElementById('insertConcessionsHasItems').style.display = 'none';
        }
        else if (dowhat == 'insertConcessionHasItems'){
          document.getElementById('browse').style.display = 'none';
          document.getElementById('insertConcession').style.display = 'none';
          document.getElementById('updateConcession').style.display = 'none';
          document.getElementById('deleteConcession').style.display = 'none';
          document.getElementById('insertConcessionsHasItems').style.display = 'block';
        }
        else if (dowhat == 'all'){
          document.getElementById('browse').style.display = 'block';
          document.getElementById('insertConcession').style.display = 'block';
          document.getElementById('updateConcession').style.display = 'block';
          document.getElementById('deleteConcession').style.display = 'block';
          document.getElementById('insertConcessionsHasItems').style.display = 'block';
        }
        else { //by default display browse
          document.getElementById('browse').style.display = 'block';
          document.getElementById('insertConcession').style.display = 'none';
          document.getElementById('updateConcession').style.display = 'none';
          document.getElementById('deleteConcession').style.display = 'none';
          document.getElementById('insertConcessionsHasItems').style.display = 'none';
        }
      }
      function newConcession() { showform('insertConcession'); }
      function updateConcession(ID) { showform('updateConcession'); }
      function deleteConcession(ID) { showform ('deleteConcession'); }
      function newConcessionHasItems() { showform('insertConcessionHasItems'); }
      function browseConcessions() { showform ('browse'); }
      function showAll() { showform ('all'); }
  </script>
